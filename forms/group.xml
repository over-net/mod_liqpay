<?xml version="1.0" encoding="utf-8"?>
<form>

    <field name="name"
           type="text"
           default=""
           label="MOD_LIQPAY_GROUP_PAYMENT_SERVICE_DESCRIPTION_LABEL"
           filter="string"
           required="true"
    />

    <field name="description"
           type="textarea"
           default=""
           label="MOD_LIQPAY_GROUP_PAYMENT_DESCRIPTION_LABEL"
           rows="3"
           filter="string"
    />


    <field name="reference_code"
           type="number"
           default="0"
           size="10"
           min="1"
           max="8"
           step="1"
           label="MOD_LIQPAY_GROUP_PAYMENT_SERVICE_REFERENCE_CODE_LABEL"
           filter="integer"
           required="true"
    />

    <field
            name="old_price"
            type="text"
            filter="integer"
            size="10"
            label="MOD_LIQPAY_GROUP_PAYMENT_OLD_PRICE_LABEL"
            class="inputbox"/>

    <field
            name="price"
            type="text"
            filter="integer"
            size="10"
            label="MOD_LIQPAY_GROUP_PAYMENT_PRICE_LABEL"
            class="inputbox"
            required="true"/>

    <field
            name="special_offer"
            type="radio"
            layout="joomla.form.field.radio.switcher"
            label="MOD_LIQPAY_GROUP_PAYMENT_SPECIAL_OFFER_LABEL"
            default="0"
            filter="integer"
    >
        <option value="0">JHIDE</option>
        <option value="1">JSHOW</option>
    </field>


</form>